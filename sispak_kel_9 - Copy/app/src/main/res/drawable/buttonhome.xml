<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State untuk tombol normal -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#CEDCE0" /> <!-- Warna latar belakang -->
            <corners android:radius="12dp" /> <!-- Sudut membulat -->

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <!-- State untuk tombol ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Warna saat ditekan -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#388E3C" /> <!-- Border hijau gelap -->
        </shape>
    </item>

    <!-- State untuk tombol dinonaktifkan -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0" /> <!-- Warna saat dinonaktifkan -->
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#BDBDBD" /> <!-- Border abu-abu -->
        </shape>
    </item>
</selector>
